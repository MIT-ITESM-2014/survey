<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navigation_menu_height"
    android:paddingLeft="@dimen/navigation_menu_padding"
    android:background="@color/navigation_menu_background"
    android:gravity="center_vertical" 
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/navigation_menu_icon"
        android:layout_height="@dimen/navigation_menu_icon"
        android:contentDescription="@string/image_description"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/navigation_menu_text_margin"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
</LinearLayout>
