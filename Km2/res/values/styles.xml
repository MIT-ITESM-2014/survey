<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="MenuButton" parent="android:style/Widget.Button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/main_menu_btn_background</item>
        <item name="android:textColor">@color/main_menu_btn_text</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:drawablePadding">@dimen/button_drawable_padding</item>
        <item name="android:layout_marginBottom">@dimen/button_margin</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:textSize">@dimen/button_text</item>
    </style>
    
    <style name="SaveButton" parent="android:style/Widget.Button">
        <item name="android:background">@color/save_btn_background</item>
        <item name="android:textColor">@color/action_btn_text</item>
        <item name="android:textSize">@dimen/action_btn_text</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="ActionButton" parent="android:style/Widget.Button">
        <item name="android:background">@color/action_btn_background</item>
        <item name="android:textColor">@color/action_btn_text</item>
        <item name="android:textSize">@dimen/action_btn_text</item>
        <item name="android:gravity">center</item>
    </style>
    
</resources>
